// Fragement Shader - AlphaMap
// version 0.1 alpha, 2013-02-17

uniform sampler2D alpha;
uniform sampler2D low;
uniform sampler2D middle;
uniform sampler2D high;

varying vec4 position;

void main( void )
{
	vec4 alpha = texture2D( alpha, gl_TexCoord[0].st );

	vec4 lowColor = texture2D( low, gl_TexCoord[1].st );
	vec4 middleColor = texture2D( middle, gl_TexCoord[2].st );
	vec4 highColor = texture2D( high, gl_TexCoord[3].st );

	vec4 color = ( highColor * alpha.r + middleColor * alpha.g + lowColor * alpha.b ) / 
		( alpha.r + alpha.g + alpha.b );
		
	float high = clamp( position.y / 10 - 0.7, 0, 1 );
	color = mix( color, vec4( .2, 0, 0, 1 ), high );
		
	gl_FragColor = color;
}