// Fragment Shader - MultiColor
// version 0.1 alpha, 2013-02-17

uniform float max;
uniform float min;

varying vec4 position;

void main( void )
{
	if( position.y > max )
	{
		gl_FragColor = vec4( 0.0, 1.0, 0.0, 0.0 );
	}
	else if( position.y < min )
	{
		gl_FragColor = vec4( 0.5450980, 0.2705882, 0.0745098, 0.0 );
	}
	else
	{		
		// Lineare Interpolation
		float r = 0.5450980 +(( 0.0 - 0.5450980 ) / ( max - min )) *( position.y - min );
		float g = 0.2705882 +(( 1.0 - 0.2705882 ) / ( max - min )) *( position.y - min );
		float b = 0.0745098 +(( 0.0 - 0.0745098 ) / ( max - min )) *( position.y - min );
		gl_FragColor = vec4( r, g, b, 1 );
	}
}